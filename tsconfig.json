{
  "compilerOptions": {
    "target": "ES6",                    
    "module": "ESNext",                 
    "moduleResolution": "node",         
    "outDir": "./dist",                 
    "esModuleInterop": true,            
    "strict": true,                     
    "skipLibCheck": true, 
    "allowImportingTsExtensions": true,              
    "forceConsistentCasingInFileNames": true,
    "declaration": true,                
    "resolveJsonModule": true
  },
  "include": [
    "*.ts"                          // Cesta k souborům pro kompilaci
  ],
  "exclude": [
    "node_modules"                       // Vyloučení složky node_modules
  ]
}